			<div>


	<div class="app">
	<div class="top-container">
	<div>
	<h3 id="demo"></h3>
	</div>
	<script>
	var d= new Date();
	document.getElementById("demo").innerHTML = d.toDateString();
	</script>
	<div>
	</div>
	<a href="/list" id="start">Start Today</a>
	</div>
	<div>

	<h3 class="heading" id="index-heading">Your Recollections</h3>
	</div>
		{{#each lists}}
				<div class="textbox">
					<div class="cardHeader">
						<h4 class="textbox-date">{{date}}</h4>
						<!-- Dropdown -->
						<div class="dropdown">
						  <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
						    <span class="caret"></span>
						  </button>

						  <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
								<li><a data-toggle="modal" class="editModalButton" data-target="#editModal">
								  Edit
								</a></li>
								<li><a data-toggle="modal" class="deleteModalButton"data-target="#deleteModal">
								  Delete
								</a></li>
						  </ul>
						</div>
						<!-- end dropdown -->
					</div>

					<h3 class="textbox-title">{{title}}</h3>
					<p class="textbox-content">{{items}}</p>

					<h3 class="textbox-title">Your mood was</h3>
					<i class="{{emoji}} card-emoji"></i>

					<h3 class="textbox-title">The weather was</h3>
					<i class="{{weather}} card-weather"></i>
				</div>
		{{/each}}


		<!-- Button trigger modal -->

		<!-- Modal -->


<!-- Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header flex-spread">
        <h5 class="modal-title" id="exampleModalLabel">Delete Memory</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span class="modal-close" aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Are you sure you want to delete this memory?
      </div>
      <div class="modal-footer flex-spread">
        <button type="button" class="btn btn-primary" data-dismiss="modal">Cancel</button>
        <button type="button" id="deleteCardButton" class="btn btn-danger">Delete</button>
      </div>
    </div>
  </div>
</div>
		</div>
		<script src="/js/jquery-1.11.0.js"></script>
		<script src="/js/bootstrap.min.js"></script>
		<script src="/js/index.js"></script>
		<script src="/js/edit.js"></script>
		<script src="/js/analytics.js"></script>
		{{> ga}}
	</body>
</html>
