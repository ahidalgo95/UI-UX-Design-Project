	<div class="panel-group top" id="accordion">
		{{#each lists}}
		<div class="panel panel-default accordion-link accordion-item">
			<div class="panel-heading">
				<div class="accordion-header">
					<div class="accordion-toggle" data-toggle="collapse" data-parent="#accordion" href="#collapse{{@index}}">
						<h4 class="panel-title">
							{{date}}
						</h4>
						<h3 class="accordion-title">{{title}}</h3>
					</div>
					<!-- Dropdown -->
					<div class="dropdown">
						<button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
							<span class="caret"></span>
						</button>

						<ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
							<li><a data-toggle="modal" class="editModalButton" data-target="#editModal">
								Edit
							</a></li>
							<li><a data-toggle="modal" class="deleteModalButton"data-target="#deleteModal">
								Delete
							</a></li>
						</ul>
					</div>
					<!-- end dropdown -->

			</div>
			    <div id="collapse{{@index}}" class="panel-collapse collapse">
				<div class="textbox">

					<h3 class="textbox-title">{{title}}</h3>
					<p class="textbox-content">{{items}}</p>

					<h3 class="textbox-title">Your mood was</h3>
					<i class="{{emoji}} card-emoji"></i>

					<h3 class="textbox-title">The weather was</h3>
					<i class="{{weather}} card-weather"></i>
				</div>
			</div>
