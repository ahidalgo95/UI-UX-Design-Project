<div class="panel-group top" id="accordion">
	{{#each lists}}
		<div class="panel panel-default accordion-link" data-toggle="collapse" data-parent="#accordion" href="#collapse{{@index}}">
				<div class="panel-heading">
					<div class="accordion-header">
		      <h4 class="panel-title">
		        {{date}}
					</h4>
						<div class="dropdown">

							<button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
								<span class="caret"></span>
							</button>

							<ul class="dropdown-menu" aria-labelledby="dropdownMenu">
								<li><a data-toggle="modal" class="editModalButton" data-target="#editModal">
									Edit
								</a></li>
								<li><a data-toggle="modal" class="deleteModalButton"data-target="#deleteModal">
									Delete
								</a></li>
							</ul>
						</div>
					</div>
					<!-- end dropdown -->
						<h3 class="accordion-title">{{title}}</h3>

		    </div>
	    <div id="collapse{{@index}}" class="panel-collapse collapse">
	      <div class="textbox">



				<h3 class="textbox-title">{{title}}</h3>
				<p class="textbox-content">{{items}}</p>

				<h3 class="textbox-title">Your mood was</h3>
				<i class="{{emoji}} card-emoji"></i>

				<h3 class="textbox-title">The weather was</h3>
				<i class="{{weather}} card-weather"></i>
	    </div>
			 </div>
	 </div>
	 {{/each}}
